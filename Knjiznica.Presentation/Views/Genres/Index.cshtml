@model IEnumerable<Knjiznica.Core.Models.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1>Genres</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                     <a asp-action="GenresBooks" asp-route-id="@item.GenreId">
                        @Html.DisplayFor(modelItem => item.GenreName)
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GenreId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.GenreId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.Page > 0)
{
    <a href="@Url.Action("Index", new { page = ViewBag.Page - 1 })"
   class="btn btn-default">
        &laquo; Prev
    </a>
}
@if (ViewBag.Page < ViewBag.MaxPage)
{
    <a href="@Url.Action("Index", new { page = ViewBag.Page + 1 })"
   class="btn btn-default">
        Next &raquo;
    </a>
}
