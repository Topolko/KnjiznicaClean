@model Knjiznica.Presentation.Models.ValutaListViewModel

@{
    ViewData["Title"] = "Converter";
}

<h1>Currency converter</h1>

<p>
    <a asp-action="CurrencyByDate" class="btn btn-primary">Conversion rates by date</a>
    <a asp-action="View" class="btn btn-primary">All currency</a>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Converter">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
        <dd class="col-sm-10">
                @Html.DisplayNameFor(model => model.ValuteList)
        </dd>
            @Html.DropDownListFor(m => m.ValuteList,
        new SelectList(Model.ValuteList, "Value")

            ,new { @class = "form-control",
            })

        <dd class="col-sm-10">
                @Html.DisplayNameFor(model => model.Odabrani_tecaj)
        </dd>
            @Html.DropDownListFor(m => m.Odabrani_tecaj,
        new SelectList(Model.Odabrani_tecaj, "Value")

        ,new { @class = "form-control",
        })

            <div class="form-group">
                <input type="number" min="1" name="toConvert" /> KN
            </div>

            <div class="form-group">
            <input type="submit" value="Converter" class="btn btn-outline-primary" />
            </div>
        <dd class="col-sm-10">
            <h5>
                @Html.DisplayNameFor(model => model.ConvertedValue)
            </h5>
        </dd>
        <dd class="col-sm-10">
            <h6>
                @Html.DisplayFor(model => model.ConvertedValue)
            </h6>
        </dd>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
